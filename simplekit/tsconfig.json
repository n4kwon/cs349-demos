{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": false /* true for final */,
    "noUnusedParameters": false /* true for final */,
    "noFallthroughCasesInSwitch": true,

    /* for jest */
    "esModuleInterop": true,

    /* for this project */
    "declaration": true,
    "declarationMap": true,
    "baseUrl": "./src"
    // "paths": {
    //   "*": ["./src/*"]
    // }
  }
}
